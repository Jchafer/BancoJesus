<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondo"
    tools:context=".principal.MainActivity">

    <TextView
        android:id="@+id/txtBienvenida"

        style="@style/TxtBienvenida"
        android:layout_width="409dp"
        android:layout_height="195dp"
        android:layout_marginTop="44dp"
        android:gravity="center"
        android:text="@string/bienvenido"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.483"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/btAcceder"
        style="@style/BotonesNormal"
        android:layout_width="197dp"
        android:layout_height="142dp"
        android:layout_marginBottom="200dp"
        android:contentDescription="TODO"
        android:foreground="@android:drawable/ic_menu_directions"
        android:rotationX="25"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtBienvenida" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="176dp"
        android:layout_height="53dp"
        android:gravity="bottom"
        android:rotationX="25"
        android:text="@string/acceder"
        android:textAlignment="center"
        android:textColor="@color/naranjaOscuro"
        android:textSize="36sp"
        android:textStyle="bold"
        android:typeface="serif"
        app:layout_constraintBottom_toBottomOf="@+id/btAcceder"
        app:layout_constraintEnd_toEndOf="@+id/btAcceder"
        app:layout_constraintStart_toStartOf="@+id/btAcceder"
        app:layout_constraintTop_toTopOf="@+id/btAcceder"
        app:layout_constraintVertical_bias="1.0" />

</androidx.constraintlayout.widget.ConstraintLayout>